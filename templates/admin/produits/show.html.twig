{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block stylesheets %}
<style>
.inline {
    display:inline-block !important;
}
</style>
{% endblock %}

{% block body %}
    <h1>Information du produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ produit.image }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ produit.couleur }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ produit.taille }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ produit.actif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Promo</th>
                <td>{{ produit.promo }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td><a href="{{ path('admin_produits_edit', {'id': produit.id}) }}" class="btn btn-primary inline">Modifier</a> {{ include('admin/produits/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_produits_index') }}">Revenir Ã  la liste</a>
{% endblock %}
