<div class="card d-flex">
    <div class="card-body bg-white">
        <a href="{{ path('show_produit', {'id': produit.id}) }}"><img class="card-img-top box-black mb-2" src="{{ produit.image }}" alt="Image de {{ produit.titre }}" width="100" height=auto>
        </a>
        <a href="{{ path('show_produit', {'id': produit.id}) }}">
            <h5 class="card_title txt-black" >{{ produit.titre }}</h5>
        </a>
        <div class="card_title text-primary" style="font-weight: bold;font-size: 1.5rem;" >
            
            {% if produit.promo %}
                <div class="text text-warning">PROMO ! {{ produit.promo }} %</div>
                <del>{{ produit.prix | number_format(0, ',', ' ')}} €</del> - {{ produit.prixpromo | number_format(0, ',', ' ')}} €
            {% else %}
            {{ produit.prix | number_format(0, ',', ' ')}} €
            {% endif %}
        </div>
        <p class="txt-black">{{ produit.description }}</p>
    <div class="pt-3 blt-1 d-flex align-items-center ">
        <div class="col">
            {% for c in produit.categories %}
                <em class="text-muted text-italic float-left"> #{{ c.name }} </em><br>
            {% endfor %}
        </div>
            <a href="{{ path('panier_add', {'id': produit.id}) }}" class="col btn btn-success box-black float-right">
                <i class="fas fa-shopping-cart mr-1">
                </i>
                Ajouter
            </a>
        </div>
    </div>
</div>