{% extends 'base.html.twig' %}

{% block title %}Connexion Oxygen Life{% endblock %}

{% block stylesheets %}

 <link href="{{ asset('css/login.css') }}" rel="stylesheet"> 


{% endblock %}

{% block body %}
<form class="box" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1>Connexion</h1>
    <input type="email" value="{{ last_username }}" name="email" placeholder="E-mail" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
